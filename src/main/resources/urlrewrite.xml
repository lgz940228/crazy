<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<!-- Configuration file for UrlRewriteFilter http://tuckey.org/urlrewrite/ -->
<urlrewrite>
    <!-- 首页 -->
	<rule>
		<from>^/$</from>
		<to type="redirect">/api/index/index.do</to>
	</rule>
	<rule>
		<from>^/api/index/index.html$</from>
		<to type="redirect">/api/index/index.do</to>
	</rule>
	<rule>
		<from>^/api/shiro/toLogin.html$</from>
		<to>/api/shiro/toLogin.do</to>
	</rule>
	<rule>
		<from>^/api/shiro/toRegister.html$</from>
		<to>/api/shiro/toRegister.do</to>
	</rule>
	<rule>
		<from>^/api/personal/personal.html$</from>
		<to type="redirect">/api/personal/toPersonal.do</to>
	</rule>
	<rule>
		<from>^/common/403.html$</from>
		<to>/common/403.do</to>
	</rule>
</urlrewrite>
