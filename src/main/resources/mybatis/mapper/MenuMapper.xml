<mapper namespace="com.lgz.crazy.business.admin.dao.MenuDao">

	<select id="selectMenuAll" resultType="com.lgz.crazy.business.user.entities.SysMenu">
		<include refid="selectMenuVo"/>
		order by order_num
	</select>

	<select id="selectMenuTree" parameterType="Long" resultType="String">
		select concat(m.id, ifnull(m.perms,'')) as perms
		from sys_menu m
		left join sys_role_menu rm on m.id = rm.sys_menu_id
		where rm.sys_menu_id = #{id}
		order by m.parent_id, m.order_num
	</select>

	<sql id="selectMenuVo">
        select id AS id, menu_name AS menuName, parent_id AS parentId, order_num AS orderNum, url AS url,
        menu_type AS menuType, visible AS visible, ifnull(perms,'') AS perms, icon AS icon, create_by AS createBy,
        create_time AS createTime,update_by AS updateBy,update_time AS updateTime,remark AS remark
		from sys_menu
    </sql>
    
